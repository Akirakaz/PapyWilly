<div class="mx-auto mt-8 w-full">
    {{ form_start(form) }}
    <div class="w-full">
        {{ form_row(form.email, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
    </div>

    <div class="mt-8" x-data="{ changepass: false }">
        <div class="gap-8">
            <button @click="changepass = !changepass" type="button" class="rounded bg-slate-50 px-4 py-2 font-medium transition hover:bg-red-500 hover:text-white">Modifier mon mot de passe</button>
            <div id="profile_password_fields" class="mt-4 w-full rounded border p-4" :class="changepass ? 'bg-red-100 border-red-300' : 'border-gray-400 pointer-events-none'">
                <span class="font-bold text-red-500" x-text="changepass ? 'Mode Ã©dition' : ''"></span>
                <div class="mt-4">
                    {{ form_label(form.oldPassword) }}
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                    {{ form_errors(form.oldPassword) }}
                </div>
                <div class="mt-8">
                    {{ form_widget(form.newPassword, {'attr': {'class': 'flex flex-col gap-4' }}) }}
                    {{ form_errors(form.newPassword) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-8 flex justify-end gap-4">
        <button class="rounded bg-slate-50 px-4 py-2 font-medium transition hover:bg-slate-600 hover:text-white">{{ button_label|default('Enregistrer') }}</button>
    </div>
    {{ form_end(form) }}
</div>