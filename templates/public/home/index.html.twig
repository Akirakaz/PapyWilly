{% extends 'public/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <header class="mx-auto flex w-full bg-center bg-no-repeat py-32 transition-all md:bg-cover" style="background-image: url('{{ asset('assets/img/BannerZelda.jpg') }}')">
        <div class="w-0 md:w-1/2"></div>
        <div class="flex w-full flex-col items-center px-4 md:w-1/2 md:items-start">
            <h2 class="mt-2 text-center font-bold uppercase text-white transition-all text-8xl md:text-left ">
                <span class="block theme-text-color ">PapyWilly</span><span>gaming</span>
            </h2>
            <a href="#" class="mt-8 ml-2 px-6 font-bold uppercase text-white transition bg-coral-red-500 py-3.5 hover:bg-coral-red-700">
                Go to my channel
            </a>
        </div>
    </header>
    <main class="mx-auto max-w-screen-xl p-4 md:p-8 ">
        <div class="flex flex-wrap lg:flex-nowrap">
            <section class="mx-auto mt-32 w-full max-w-screen-sm lg:w-1/2">
                <div class="w-full self-center md:pr-8 ">
                    <h2 class="text-xl font-medium uppercase text-coral-red-500">About me</h2>
                    <p class="text-5xl font-bold uppercase text-white">{{ settings.profilTitle }}</p>
                    <p class="mt-8 font-medium text-gray-400">{{ settings.profilDescription }}</p>
                    <p class="mt-8 text-right text-3xl font-semibold text-white lg:mt-8">{{ SITE_NAME }}</p>
                </div>
            </section>
            <section class="mx-auto mt-10 w-full max-w-screen-sm lg:w-1/2 lg:mt-40">
                <div class="w-full md:pl-4">
                    <img class="rounded object-cover object-center" src="{{ vich_uploader_asset(settings) }}" alt="{{ settings.imageName }}">
                </div>
            </section>
        </div>


        <div class="flex flex-wrap xl:flex-nowrap">
            <section class="mx-auto mt-32 w-full max-w-screen-sm lg:w-3/4">
                <div class="flex w-full justify-center">
                    <h2 class="text-center">
                        <span class="block text-xl font-medium uppercase text-coral-red-500">My streaming</span>
                        <span class="flex text-5xl font-bold uppercase text-white">
                            <svg class="mr-2 w-2 self-end mb-3.5 fill-coral-red-500" fill="none" viewBox="0 0 11 11"><path d="M.81.31h10v10h-10z"/></svg>
                        Hardware
                    </span>
                    </h2>
                </div>
                <div x-data="{ hardwareExpanded: false }">

                    <div class="mt-16 flex flex-col items-center gap-16 md:gap-8"
                         x-cloak
                         x-show="hardwareExpanded"
                         x-collapse.min.450px
                    >
                        {% for hardware in hardwares %}
                            <div class="flex w-full max-w-2xl flex-wrap items-center justify-between gap-x-8">
                                <div class="flex grow gap-8">
                                    <div class="text-center w-14">
                                        <i title="{{ hardware.icon|replace({'icon-': '', '-': ' '})|upper }}" class="icon {{ hardware.icon }} text-5xl text-white hover:text-coral-red-500 transition"></i>
                                    </div>
                                    <div class="flex flex-col justify-center">
                                        <p class="text-xl text-white">{{ hardware.brand }}</p>
                                        <p class="text-gray-400">{{ hardware.model }}</p>
                                    </div>
                                </div>
                                <div class="flex w-full justify-end md:w-fit">
                                    <a class="max-w-fit px-6 text-center font-bold uppercase text-white transition bg-coral-red-500 py-3.5 hover:bg-coral-red-700" href="{{ hardware.url}}">Buy it now!</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="mt-2 flex cursor-pointer justify-center border-t-4 border-mirage-200" @click="hardwareExpanded = ! hardwareExpanded">
                        <svg class="w-16 fill-white" viewBox="0 0 20 20">
                            <path x-show="!hardwareExpanded" fill-rule="evenodd" d="M5.293 7.293a1 1 0 0 1 1.414 0L10 10.586l3.293-3.293a1 1 0 1 1 1.414 1.414l-4 4a1 1 0 0 1-1.414 0l-4-4a1 1 0 0 1 0-1.414z"/>
                            <path x-show="hardwareExpanded" fill-rule="evenodd" d="M14.707 12.707a1 1 0 0 1-1.414 0L10 9.414l-3.293 3.293a1 1 0 0 1-1.414-1.414l4-4a1 1 0 0 1 1.414 0l4 4a1 1 0 0 1 0 1.414z"/>
                        </svg>
                    </div>
                </div>
            </section>

            <section class="mx-auto mt-32 w-full max-w-screen-sm xl:w-1/3">
                <div class="flex w-full justify-center">
                    <h2 class="text-center">
                        <span class="block text-xl font-medium uppercase text-coral-red-500">About my</span>
                        <span class="flex text-5xl font-bold uppercase text-white">
                            <svg class="mr-2 w-2 self-end mb-3.5 fill-coral-red-500" fill="none" viewBox="0 0 11 11"><path d="M.81.31h10v10h-10z"/></svg>
                            channel
                        </span>
                    </h2>
                </div>
                <div class="mt-16">
                    <p class="text-xl text-gray-400">{{ settings.channelDescription }}</p>
                    <div class="mt-8">
                        <ul class="flex flex-col gap-8 text-gray-300">
                            <li class="flex justify-between">
                                <span>From</span>
                                <span class="font-semibold">{{ settings.channelCity }}</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Platforms</span>
                                <span class="font-semibold">{{ settings.channelPlatforms }}</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Content</span>
                                <span class="font-semibold">{{ settings.channelContent }}</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Favorite Game</span>
                                <span class="font-semibold">{{ settings.channelGame }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}
