{% extends 'public/base.html.twig' %}

{% block title %}Stream{% endblock %}

{% block body %}
    <main class="mx-auto w-full max-w-screen-xl grow p-8" x-data="{chat: false}">
        <div class="mt-20 flex w-full justify-center">
            <h1 class="text-center">
                <span class="block text-xl font-medium uppercase text-coral-red-500">Watch now!</span>
                <span class="flex text-6xl font-bold uppercase text-white md:text-7xl">
                    <svg class="mr-2 w-2 self-end mb-3.5 fill-coral-red-500" fill="none" viewBox="0 0 11 11"><path d="M.81.31h10v10h-10z"/></svg>
                    My Livestream
                </span>
            </h1>
        </div>

        <section class="mt-16">
            <iframe class="aspect-video"
                    src="https://player.twitch.tv/?channel={{ settings.twitchChannel }}&parent=localhost&autoplay=false"
                    parent="localhost"
                    width="100%"
                    allowfullscreen
            >
            </iframe>
            <div class="flex justify-end">
                <button class="hidden text-right text-xl text-white after:bg-coral-red-500 u-link md:block" @click="chat = !chat">Voir le t'chat</button>
            </div>
            <div x-show="chat" class="fixed right-8 bottom-8 z-1">
                <span @click="chat = false" class="cursor-pointer text-white">Fermer</span>
                <iframe class="mt-1"
                        src="https://www.twitch.tv/embed/{{ settings.twitchChannel }}/chat?parent=localhost"
                        height="555"
                        width="100%">
                </iframe>
            </div>
        </section>


        <section class="mx-auto mt-24 max-w-screen-xl">
            <div class="flex w-full justify-center">
                <h2 class="text-center">
                    <span class="block text-xl font-medium uppercase text-coral-red-500">Stream</span>
                    <span class="flex text-7xl font-bold uppercase text-white">
                        <svg class="mr-2 w-2 self-end mb-3.5 fill-coral-red-500" fill="none" viewBox="0 0 11 11"><path d="M.81.31h10v10h-10z"/></svg>
                        Schedule
                    </span>
                </h2>
            </div>

            <div class="mt-24 grid grid-cols-1 gap-8 md:grid-cols-2">
                {% for stream in upcoming_streams %}
                    <div class="flex gap-8 border-l-8 p-8 bg-mirage-400 border-coral-red-500">
                        <div class="flex flex-col items-center">
                            <span class="font-bold uppercase text-coral-red-500">{{ stream.start_time|date('D')|format_date(locale='fr', pattern='EEE') }}</span>
                            <span class="text-3xl font-bold text-white">{{ stream.start_time|date('d') }}</span>
                            <span class="text-sm font-semibold uppercase text-gray-500">{{ stream.start_time|date('M')|format_date(locale='fr', pattern='MMM') }}</span>
                        </div>
                        <div class="flex flex-col gap-8">
                            <div class="flex gap-8">
                                <img class="w-16" src="https://via.placeholder.com/64x64" alt="">
                                <div>
                                    <p class="font-bold uppercase text-coral-red-500">{{ stream.category.name }}</p>
                                    <p class="text-sm text-white">{{ stream.title }}</p>
                                    <p class="text-sm font-semibold uppercase text-gray-400">{{ stream.start_time|date("H:i") }} - {{ stream.end_time|date("H:i") }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}



<div class="bg-white">
    {% set groupedStreams = {} %}

    {% for stream in upcoming_streams %}
        {% set date = stream.start_time|date('Y-m-d') %}
        {% set groupedStreams = groupedStreams|merge({date: (groupedStreams[date] ?? [])|merge([stream])}) %}
    {% endfor %}

    {% for date, streams in groupedStreams %}
        <h2>{{ date }}</h2>
        <ul>
            {% for stream in streams %}
                <li>{{ stream.title }} - {{ stream.start_time|date("H:i") }}</li>
            {% endfor %}
        </ul>
    {% endfor %}
    <h2>Autres streams</h2>
    <ul>
        {% for stream in upcoming_streams %}
            {% if stream.start_time|date('Y-m-d') not in groupedStreams %}
                <li>{{ stream.title }} - {{ stream.start_time|date("H:i") }}</li>
            {% endif %}
        {% endfor %}
    </ul>

</div>
            </div>
        </section>
    </main>
{% endblock %}
