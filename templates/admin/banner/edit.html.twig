{% extends 'admin/base.html.twig' %}

{% set title = "Edition d'une bannière" %}

{% block pageTitle %}Admin - {{ title }}{% endblock %}

{% block body %}
    <main class="mx-auto mt-16 w-full max-w-screen-xl grow p-4">
        <h1 class="my-8 text-4xl font text-center">{{ title }}</h1>

        <div class="flex justify-end gap-2">
            <a class="rounded bg-slate-50 px-4 py-2 font-medium transition hover:bg-slate-600 hover:text-white" href="{{ path('app_admin_banner_index') }}">Retour</a>

            <form method="post" action="{{ path('app_admin_banner_delete', {'id': banner.id}) }}" onsubmit="return confirm('Voulez vous supprimer la bannière?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ banner.id) }}">
                <button class="rounded bg-slate-50 px-4 py-2 font-medium transition hover:bg-red-600 hover:text-white">
                    Supprimer
                </button>
            </form>
        </div>

        {{ include('admin/banner/_form.html.twig') }}
    </main>
{% endblock %}
